    .month-table {
        width: 100%;
        background-color: #ffffff;
    }

    .month-cell {
        height: 130px;
        padding: 6px;
        vertical-align: top;
        cursor: pointer;
        font-size: 13px;
    }

    .month-cell:hover {
        background-color: #eef6ff;
    }

    .month-cell-other {
        background-color: #f4f4f4;
        color: #888;
    }

    .today {
        outline: 3px solid #0d6efd;
        background-color: #eaf2ff !important;
    }
</style>