@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        var state = await AuthStateTask;
        var user = state.User;

        if (user?.Identity?.IsAuthenticated == true)
        {
            if (user.IsInRole("customer"))
            {
                Nav.NavigateTo("/customer/dashboard", true);
                return;
            }
            if (user.IsInRole("cook") || user.IsInRole("admin"))
            {
                Nav.NavigateTo("/cook/dashboard", true);
                return;
            }
            Nav.NavigateTo("/login", true);
        }
        else
        {
            var relative = Nav.ToBaseRelativePath(Nav.Uri);
            var url = "/login";
            if (!string.IsNullOrEmpty(relative))
                url += "?returnUrl=" + Uri.EscapeDataString("/" + relative);
            Nav.NavigateTo(url, true);
        }
    }
}